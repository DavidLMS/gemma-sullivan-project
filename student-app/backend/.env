# STUDENT BACKEND

# Tutor Service Integration
TUTOR_SERVICE_URL=http://localhost:3001
SYNC_CHECK_INTERVAL=30

# Model Selection
MODEL_ID=google/gemma-3n-E4B-it
MAX_INPUT_TOKENS=12000
MAX_OUTPUT_TOKENS=16000

# Generation Parameters
TEMPERATURE=0.5
DO_SAMPLE=true
REPETITION_PENALTY=1.1

# Retry and Error Handling
MAX_RETRIES=50
RETRY_DELAY=0.5

# Discovery Mode Settings
DISCOVERY_QUESTION_LIMIT=5

# Device and Memory Management
DEVICE=
MEMORY_LIMIT_GPU=2.5GB
MEMORY_LIMIT_CPU=12GB
USE_MLX_VLM=false

# Content Processing Paths
MODELS_DIR=models
PROMPTS_DIR=prompts
INBOX_DIR=content/inbox
PROCESSED_DIR=content/processed
LOGS_DIR=logs

# Model Interaction Logging
ENABLE_MODEL_LOG_FILE=true

